<Page
    x:Class="Aula03_Pokedex.PokemonDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Aula03_Pokedex"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="images/pokemon_background.png"/>
        </Grid.Background>
        <StackPanel Margin="10,115,10,215">
            <TextBlock x:Name="txtBlNome" TextWrapping="Wrap" Text="TextBlock" FontSize="20" TextAlignment="Center" FontWeight="Bold"/>
            <TextBlock x:Name="txtBlTipo" TextWrapping="Wrap" Text="TextBlock" FontSize="18"/>
            <TextBlock x:Name="txtBlVida" TextWrapping="Wrap" Text="TextBlock" FontSize="18"/>
            <TextBlock x:Name="txtBlAtaque" TextWrapping="Wrap" Text="TextBlock" FontSize="18"/>
            <TextBlock x:Name="txtBlDefesa" TextWrapping="Wrap" Text="TextBlock" FontSize="18"/>
        </StackPanel>
        <Image x:Name="imgPokemon" HorizontalAlignment="Left" Height="100" Margin="115,10,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="btnRetornar" Content="Retornar" HorizontalAlignment="Left" Margin="10,430,0,0" VerticalAlignment="Top" Width="340" Click="btnRetornar_Click"/>

    </Grid>
</Page>
